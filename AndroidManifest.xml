<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="se.slackers.cube" android:versionCode="19"
	android:versionName="0.9.11">
	
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity android:name=".activity.ListActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.ViewActivity"
			android:label="@string/labelView">
		</activity>
		<activity android:name=".activity.CubePreferencesActivity"
			android:label="@string/labelPreferences">
		</activity>
		<activity android:name=".activity.HelpActivity"
			android:label="@string/help">
		</activity>
		<activity android:name=".activity.InfoActivity"
			android:label="@string/info">
		</activity>
		
		<provider android:name=".provider.AlgorithmProvider" android:authorities="se.slackers.cube.Algorithms"/>
		<meta-data android:value="a14bf394ef36475" android:name="ADMOB_PUBLISHER_ID" />
		<meta-data android:value="true" android:name="ADMOB_ALLOW_LOCATION_FOR_ADS" />
        <receiver android:name="com.admob.android.ads.analytics.InstallReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
	</application>
	<uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest> 

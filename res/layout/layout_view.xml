<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res/se.slackers.cube"
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	>
	
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"  
		android:layout_gravity="center_horizontal"
		android:layout_above="@+id/ad"
		>
		<TextView
			android:id="@+id/permutationName"
			style="@style/text_headers"
			android:layout_marginBottom="@dimen/margin_large" 
			/>		
		<FrameLayout 
			android:id="@+id/permutationContainer" 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center_horizontal" 
			/>
		<FrameLayout 	
			android:id="@+id/algorithmContainer" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="20dp"
			/>			
	</LinearLayout>
	<com.google.ads.AdView 
		android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
        ads:adUnitId="a14bf394ef36475"
        ads:adSize="BANNER"/>
</RelativeLayout>

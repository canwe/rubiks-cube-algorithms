<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	>
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:orientation="vertical"
		>
		
		<TextView 
			android:id="@+id/infoAppName"
			style="@style/text_headers" 
			android:text="@string/app_name"
			/>
		<TextView 
			style="@style/info_text" 
			android:text="@string/help_intro"
			/>
			
		<!-- Permutation view -->
		<TextView 
			style="@style/info_header" 
			android:text="@string/help_perm_header"
			/>
		<TextView 
			style="@style/info_text" 
			android:text="@string/help_perm_text"
			/>
			
		<!-- Quick list -->
		<TextView 
			style="@style/info_header" 
			android:text="@string/help_quick_header"
			/>
		<TextView 
			style="@style/info_text" 
			android:text="@string/help_quick_text"
			/>
			
		<!-- Algorithm view -->
		<TextView 
			style="@style/info_header" 
			android:text="@string/help_algo_header"
			/>
		<TextView 
			style="@style/info_text" 
			android:text="@string/help_algo_text"
			/>
			
		<!-- Info -->
		<TextView 
			style="@style/info_header" 
			android:text="@string/help_info_header"
			/>		
		<TextView 
			android:id="@+id/text1"
			style="@style/text_standard" 
			android:text="@string/help_info_text" 
			android:layout_marginBottom="@dimen/margin_large"
			android:autoLink="web" 
			/>
		<Button
			android:id="@+id/feedback"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:gravity="center_horizontal"
			android:text="@string/feedback"
			/>
	</LinearLayout>
</ScrollView>
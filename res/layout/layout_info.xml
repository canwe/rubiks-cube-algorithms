<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/se.slackers.cube.widget" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	
	<TextView 
		android:id="@+id/infoAppName"
		style="@style/text_headers" 
		android:text="@string/app_name"
		android:gravity="center_horizontal"
		android:layout_marginBottom="@dimen/margin_standard"
		/>
	<TextView 
		android:id="@+id/text1"
		style="@style/text_standard" 
		android:text="@string/infoText_1" 
		android:layout_below="@+id/infoAppName" 
		android:layout_marginBottom="@dimen/margin_large"
		android:autoLink="web" 
		/>
	<Button
		android:id="@+id/feedback"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_below="@+id/text1"
		android:layout_centerHorizontal="true"
		android:text="@string/feedback"
		/>
</RelativeLayout>
